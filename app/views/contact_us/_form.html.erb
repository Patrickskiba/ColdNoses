<div class="col-md-5">
  <% if current_page?(new_contact_u_path) %>
      <h1>Contact Us</h1>
  <% else %>
      <h1>Editing your message</h1>
  <% end %>
  <%= form_for(@contact) do |f| %>
      <% if @contact.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(event.errors.count, "error") %> prohibited this message from being saved:</h2>

            <ul>
              <% @contact.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :content %>
        <%= f.text_area :content, class: "form-control" %>
      </div>

      <div class="actions">
        <% f.label :submit, "Contact Us" %>
        <%= f.submit class:"btn btn-warning" %>
        <%= link_to 'Back', events_path, class: "btn btn-success" %>
      </div>
  <% end %>
</div>