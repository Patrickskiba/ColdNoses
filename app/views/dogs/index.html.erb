<%= stylesheet_link_tag 'nonHomeNav', media: 'print, screen' %>
<div class="container belowNav">
  <p id="notice"><%= notice %></p>
<h1>Dogs</h1>
<div class="row">
  <div class="container-fluid">
    <%= @dogs.each do |puppy| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail"><%= image_tag(puppy.image.to_s) %></div>
      <div class="caption">
        <h3><%= puppy.name %></h3>
        <h5><%= puppy.age %>,   <%= puppy.gender %>, <%= puppy.breed %></h5>
        <p><%= puppy.description %></p>
      </div></div><% end %>
  </div>
</div>
<br>
<%= link_to 'New Dog', new_dog_path, class:"btn btn-success" %>
</div>