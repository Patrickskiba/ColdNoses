<%= stylesheet_link_tag 'nonHomeNav', media: 'print, screen' %>
<div class="container belowNav">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <div class="container-fluid">
      <% @puppy.each do |puppy| %>
          <div class="col-sm-6 col-md-3">
            <div class="thumbnail"><%= image_tag (puppy.image.to_s) %></div>
            <div class="caption">
              <h3><%= puppy.name %></h3>
              <h5><%= puppy.age %>,   <%= puppy.gender %>, <%= puppy.breed %></h5>
              <p><%= puppy.description %></p>
              <% if user_signed_in? %>
                  <p>

                    <%= link_to 'Show', puppy, class:"btn btn-success" %>
                    <%= link_to 'Edit', edit_puppy_path(puppy) %>
                    <%= link_to 'Destroy', puppy, method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end %>
              </p>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>