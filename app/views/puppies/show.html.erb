<%= stylesheet_link_tag 'nonHomeNav', media: 'print, screen' %>
<div class="container belowNav">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <div class="container-fluid">

          <div class="col-sm-6 col-md-3">
            <div class="thumbnail"><%= image_tag (@puppy.image.to_s) %></div>
            <div class="caption">
              <h3>Name: </h3><h3><%= @puppy.name %></h3>
              <p>Age: </p><p><%= @puppy.age %>,</p>  <br>
              <p>Gender: </p><p> <%= @puppy.gender %>,</p><br>
              <p>Breed: </p><p><%= @puppy.breed %></p><br>
              <p>Description: </p> <p><%= @puppy.description %></p><br>
              <p>Canine Good Citizen: </p><p><%= @puppy.cgc %></p><br>
              <p>Therapy Group: </p><p><%= @puppy.therapy_group %></p><br>
              <p>Renewal Date:</p><p><%= @puppy.renewal_date %></p><br>
              <p>Member: </p><p><%= @puppy.member %></p><br>
              <p>Retired: </p><p><%= @puppy.retired %></p><br>

              <% if user_signed_in? %>
                  <p>
                    <%= link_to 'Back', puppies_path, class:"btn btn-success" %>
                    <%= link_to 'Edit', edit_puppy_path(@puppy), class:"btn btn-warning" %>
                    <%= link_to 'Destroy', @puppy, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
              <% end %>
              </p>
            </div>
          </div>
    </div>
  </div>
</div>