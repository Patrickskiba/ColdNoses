<%= stylesheet_link_tag 'nonHomeNav', media: 'print, screen' %>
<div class="container belowNav">
  <p id="notice"><%= notice %></p>
  <div class="container-fluid">
    <div class="col-md-4">
      <%= link_to 'R.E.A.D. Team', readTeam_path, class:'links' %>
    </div>
    <div class="col-md-4"><%= link_to 'Membership/Renewal Application', asset_path("membershipapplicationfinal.pdf"), class:'links' %></div>
    <div class="col-md-4">
      <%= link_to 'Therapy Team', therapyTeam_path, class:'links' %>
    </div>
  </div>
<h1>Puppies</h1>
  <div class="row">
    <div class="container-fluid">
      <% @puppies.each do |puppy| %>
          <div class="col-sm-6 col-md-3">
            <div class="thumbnail"><%= image_tag (puppy.image) %></div>
            <div class="caption">
              <h3><%= puppy.name %></h3>
              <h5><%= puppy.age %>,   <%= puppy.gender %>, <%= puppy.breed %></h5>
              <p><%= puppy.description %></p>
              <% if current_user.try(admin?) %>
              <p>

              <%= link_to 'Show', puppy, class:"btn btn-success" %>|
              <%= link_to 'Edit', edit_puppy_path(puppy), class:"btn btn-warning" %>|
              <%= link_to 'Destroy', puppy, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>|
                <% end %>
              </p>
            </div>
          </div>
      <% end %>
    </div>
  </div>
<br>
  <% if user_signed_in? %>
  <%= link_to 'New Puppy', new_puppy_path, class:"btn btn-success" %>
      <% end %>
</div>