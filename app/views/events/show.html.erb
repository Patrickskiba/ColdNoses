<%= stylesheet_link_tag 'nonHomeNav', media: 'print, screen' %>
<div class="container belowNav">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <div class="container-fluid">

      <div class="col-sm-6 col-md-3">
  <p>
    <strong>Title: </strong>
    <%= @event.title %>
  </p>

  <p>
    <strong>Description: </strong>
    <%= @event.description %>
  </p>

  <p>
    <strong>Start time: </strong>
    <%= @event.start_time.strftime("%m/%d/%Y %H:%m %p") %>
  </p>

  <p>
    <strong>End time: </strong>
    <%= @event.end_time.strftime("%m/%d/%Y %H:%m %p") %>
  </p>
    <p>
      <%= render @event.comments %>
    </p>
    <% if user_signed_in? %>
    <p>
      <strong>Add a comment: </strong>
      <%= render 'comments/form' %>
    </p>

  <%= link_to 'Edit', edit_event_path(@event), class: "btn btn-warning" %> |
  <%= link_to 'Destroy', @event, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %> |
  <%= link_to 'Back', events_path, class: "btn btn-success" %>
      <% end %>
</div>
</div>
</div>
</div>